@model MovieStore.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>

<ul>
    <li> @Model.Genre.Name</li>
    <li> Release Date: @Model.ReleaseDate.ToString()</li>
    <li> Date Added: @Model.DateAdded.ToString()</li>
    <li> Number in Stock: @Model.NumberInStock</li>
</ul>